{
  "name": "SimplePW",
  "version": "1.0",
  "manifest_version": 2,
  "description": "One Password does it all! Password Manager plugin to be used with account on http://simplepw.herokuapp.com/. If you don't have an account sign up today!",
  "browser_action": {
    "default_icon": "icon.png",
    "default_menu": "Menu",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
      "tabs", "http://*/*", "activeTab", "webRequest", "http://simplepw.herokuapp.com/dashboard"
    ],
  "content_scripts": [
        {
            "matches": [
                "http://*/*", "https://*/*"
            ],
            "js": [
                "./js/info.js", "./js/jquery.js", "./js/crypto.js", "./js/JsonFormatter.js"
            ]
        }],
        "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
