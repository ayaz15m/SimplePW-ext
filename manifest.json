{
  "name": "Extension Menu",
  "version": "1.0",
  "manifest_version": 2,
  "description": "My extension",
  "browser_action": {
    "default_icon": "icon.png",
    "default_menu": "Menu",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
      "tabs", "http://*/*", "activeTab", "http://0.0.0.0:3000/dashboard"
    ],
    "background": {
      "scripts": ["./js/bg.js"],
      "persistent": true
    },
  "content_scripts": [
        {
            "matches": [
                "http://*/*", "https://*/*"
            ],
            "js": [
                "./js/jquery.js", "./js/info.js"
            ]
        }],
        "content_security_policy": "script-src 'self'; object-src 'self'"
}
